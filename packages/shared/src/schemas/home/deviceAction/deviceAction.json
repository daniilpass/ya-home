{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "http://home.anydany.ru/schemas/deviceAction.json",
  "title": "DeviceAction",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string"
    },
    "state": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "on": {
          "type": "boolean"
        },
        "brightness": {
          "type": "number"
        }
      }
    }
  },
  "required": ["id", "state"]
}
